<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"

    tools:context="madelynreyes.quackero.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        >

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/bryce"
            android:src="@drawable/bryce"
            android:contentDescription="@string/bryce"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:id="@+id/connor"
            android:src="@drawable/connor1"
            android:contentDescription="@string/connor"
            android:background="#FFFFFF"/>
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:id="@+id/nathan"
            android:src="@drawable/nathan"
            android:contentDescription="@string/nathan"
            android:background="#FFFFFF"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/zach"
            android:src="@drawable/zach"
            android:contentDescription="@string/zach"
            android:background="#FFFFFF"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/madelyn"
            android:src="@drawable/madelyn"
            android:contentDescription="@string/madelyn"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/kim"
            android:src="@drawable/kim"
            android:contentDescription="@string/kim"/>

    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/susanna"
            android:src="@drawable/susanna"
            android:contentDescription="@string/susanna"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/avery"
            android:src="@drawable/avery"
            android:contentDescription="@string/avery"/>


        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/aidan"
        android:src="@drawable/aidan"
            android:contentDescription="@string/aidan"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/bri"
            android:src="@drawable/bri"
            android:contentDescription="@string/bri"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/elizabeth"
            android:src="@drawable/elizabeth"
            android:contentDescription="@string/elizabeth"/>


    </LinearLayout>



</LinearLayout>
